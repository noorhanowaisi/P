<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2dbdb"
    android:orientation="vertical"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#e2dbdb"
        app:srcCompat="@drawable/capture1" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#e2dbdb">

        <RadioButton
            android:id="@+id/Male"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#94CDE6"
            android:text="Housing Students-Male"

            android:textColor="#100F0F"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/Female"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#94CDE6"
            android:text="Housing Students-Female"

            android:textColor="#1C1B1B"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/Family"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#94CDE6"
            android:text="Housing Family"

            android:textColor="#222020"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/select"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#1C537E"
        android:backgroundTintMode="src_over"
        android:hapticFeedbackEnabled="false"
        android:text="Select"
        android:textColor="#FFFFFF" />


</androidx.appcompat.widget.LinearLayoutCompat>